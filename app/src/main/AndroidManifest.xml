<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secuso.privacyfriendlywerwolf">

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.secuso.privacyfriendlywerwolf.activity.LobbyActivity" />
        <activity android:name="org.secuso.privacyfriendlywerwolf.activity.GameActivity" />
        <activity android:name="org.secuso.privacyfriendlywerwolf.activity.AboutActivity" />
        <activity android:name="org.secuso.privacyfriendlywerwolf.activity.SettingsActivity" />
        <activity
            android:name="org.secuso.privacyfriendlywerwolf.activity.HelpActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="org.secuso.privacyfriendlywerwolf.activity.StartHostActivity" />

        <activity
            android:name="org.secuso.privacyfriendlywerwolf.activity.StartClientActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.secuso.privacyfriendlywerwolf.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlywerwolf.activity.TutorialActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>