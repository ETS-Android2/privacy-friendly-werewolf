<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.secuso.privacyfriendlywerwolf.activity.MainActivity">

    <TextView
        android:text="Welcome to the Privacy Friendly Werewolf. Here you can start and control the gameactivity."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/welcomeMsg" />

    <Button
        android:text="Start a new game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStartNewGame"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="What do you want to do?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="35dp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/welcomeMsg"
        android:layout_alignEnd="@+id/buttonStartNewGame" />

    <Button
        android:text="Join an existing game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonJoinGame"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:layout_below="@+id/buttonStartNewGame"
        android:layout_centerHorizontal="true" />
</RelativeLayout>