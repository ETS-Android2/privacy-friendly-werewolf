<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory
        android:key="pref_key_storage_cat1"
        android:title="Spielcharaktere">

        <org.secuso.privacyfriendlywerwolf.preferences.NumberPickerPreference
            android:defaultValue="1"
            android:key="pref_werewolf_player"
            android:summary="Bitte geben Sie an, wie viele Werewölfe im Spiel vorhanden sein sollen."
            android:title="Werwölfe" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_seer_player"
            android:summary="Geben Sie hier an, ob ein Seher im Spiel vorhanden sein soll."
            android:title="Seher" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_witch_player"
            android:summary="Geben Sie hier an, ob eine Hexe im Spiel vorhanden sein soll. "
            android:title="Hexe" />

    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_storage_cat2"
        android:title="@string/pref_cat_title2">

        <org.secuso.privacyfriendlywerwolf.preferences.NumberPickerPreference
            android:defaultValue="60"
            android:key="pref_timer_night"
            android:summary="Bitte geben Sie an, wie viele Sekunden die Nacht andauern soll."
            android:title="Nacht" />

        <org.secuso.privacyfriendlywerwolf.preferences.NumberPickerPreference
            android:defaultValue="300"
            android:key="pref_timer_day"
            android:summary="Bitte geben Sie an, wie viele Sekunden diese Phase andauern soll."
            android:title="Tag" />

        <org.secuso.privacyfriendlywerwolf.preferences.NumberPickerPreference
            android:defaultValue="60"
            android:key="pref_timer_witch"
            android:summary="Bitte geben Sie an, wie viele Sekunden diese Phase andauern soll."
            android:title="Hexe" />

        <org.secuso.privacyfriendlywerwolf.preferences.NumberPickerPreference
            android:defaultValue="60"
            android:key="pref_timer_seer"
            android:summary="Bitte geben Sie an, wie viele Sekunden diese Phase andauern soll."
            android:title="Seher" />


    </PreferenceCategory>


</PreferenceScreen>